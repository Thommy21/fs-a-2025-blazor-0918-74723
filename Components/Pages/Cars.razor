@page "/cars"
@rendermode InteractiveServer
@using fs_a_2025_blazor_0918_74723.Models
@using fs_a_2025_blazor_0918_74723.Models.Repositories
@inject CarRepository CarRepo

<h3 class="mb-3">Fleet of Cars</h3>
@if (cars.Count == 0)
{
    <p><em>Loading Cars...</em></p>
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated"
             role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
             style="width: 75%">
        </div>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>Color</th>
                <th>Mileage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in cars)
            {
                <tr>
                    <td>@car.Id</td>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Color</td>
                    <td>@car.Mileage.ToString("N0") km</td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<Car> cars = new();

    protected override async Task OnInitializedAsync()
    {
        cars = CarRepo.GetAllCars();
        await Task.Delay(500); // simulating API delay
    }
}